<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Spinner
            android:layout_width="368dp"
            android:layout_height="95dp"
            android:id="@+id/spinner_figure" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.02" android:textAlignment="center"></Spinner>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="184dp" app:srcCompat="@drawable/nofig"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageViewfigure" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_figure" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText1"
            tools:textSize="8sp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.012" app:layout_constraintTop_toBottomOf="@+id/imageViewfigure"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089" android:visibility="invisible" android:numeric="decimal"/>
    <EditText
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            tools:textSize="8sp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.256" app:layout_constraintTop_toBottomOf="@+id/imageViewfigure"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089" android:visibility="invisible" android:numeric="decimal"/>
    <EditText
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            tools:textSize="8sp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.493" app:layout_constraintTop_toBottomOf="@+id/imageViewfigure"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089" android:visibility="invisible" android:numeric="decimal"/>
    <EditText
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            tools:textSize="8sp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.75" app:layout_constraintTop_toBottomOf="@+id/imageViewfigure"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089" android:visibility="invisible" android:numeric="decimal"/>
    <Button
            android:text="Count Button"
            android:layout_width="94dp"
            android:layout_height="150dp"
            android:id="@+id/buttonCount" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewfigure" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.047" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:visibility="invisible"/>
    <TextView
            android:text="PERIMETER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewP"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewfigure" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.236"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.863" android:visibility="invisible"/>
    <TextView
            android:text="SQUARE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewS"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewfigure" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.531"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.834" android:visibility="invisible"/>


</android.support.constraint.ConstraintLayout>
